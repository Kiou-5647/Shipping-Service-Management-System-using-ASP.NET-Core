@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-lg border-0 rounded-lg">

                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="fw-bold my-1 text-uppercase">
                        <i class="fas fa-key me-2"></i>@ViewData["Title"]
                    </h3>
                    <p class="small mb-0 text-white-50">Cập nhật mật khẩu mới để bảo vệ tài khoản</p>
                </div>

                <div class="card-body p-5">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3 fw-bold"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu cũ" />
                            <label asp-for="Input.OldPassword"><i class="fas fa-lock me-1 text-muted"></i> Mật khẩu hiện tại</label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu mới" />
                            <label asp-for="Input.NewPassword"><i class="fas fa-key me-1 text-muted"></i> Mật khẩu mới</label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu" />
                            <label asp-for="Input.ConfirmPassword"><i class="fas fa-check-circle me-1 text-muted"></i> Xác nhận mật khẩu mới</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                                <i class="fas fa-save me-2"></i> CẬP NHẬT MẬT KHẨU
                            </button>
                            <a href="/" class="btn btn-light text-muted">
                                <i class="fas fa-arrow-left me-1"></i> Quay về trang chủ
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}