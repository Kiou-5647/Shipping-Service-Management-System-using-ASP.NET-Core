@using Shipping.Models.Enums
@model IEnumerable<Shipping.Models.DonHang>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold text-primary"><i class="fas fa-history me-2"></i>Lịch sử gửi hàng</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus me-1"></i> Tạo đơn mới
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                            <span class="fw-bold text-primary">#@item.Id</span>
                            @{
                                var statusClass = item.TrangThaiDH switch
                                {
                                    TrangThaiDonHang.DaGiao => "bg-success",
                                    TrangThaiDonHang.ThatBai => "bg-danger",
                                    TrangThaiDonHang.ChoXuLy => "bg-warning text-dark",
                                    _ => "bg-primary"
                                };
                            }
                            <span class="badge @statusClass rounded-pill">@Html.DisplayFor(modelItem => item.TrangThaiDH)</span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-center" style="min-width: 40px;">
                                    <i class="fas fa-circle text-secondary small"></i>
                                    <div class="border-start border-2 h-50 mx-auto my-1"></div>
                                    <i class="fas fa-map-marker-alt text-danger"></i>
                                </div>
                                <div class="w-100">
                                    <div class="mb-2">
                                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Gửi từ</small>
                                        <div class="fw-bold">@item.TTNguoiGui?.Split('-')[0]</div>
                                        <div class="text-muted small text-truncate">@item.TinhThanhGui?.TenTinhThanh</div>
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Đến</small>
                                        <div class="fw-bold">@item.TTNguoiNhan?.Split('-')[0]</div>
                                        <div class="text-muted small text-truncate">@item.TinhThanhNhan?.TenTinhThanh</div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-2" />

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted d-block">COD + Ship</small>
                                    <span class="fw-bold text-dark">@item.ThanhTien.ToString("N0") ₫</span>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted d-block">Ngày tạo</small>
                                    <span class="small">@item.NgayTao.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white text-end border-0 pb-3">
                            <a asp-controller="Tracking" asp-action="Index" asp-route-searchId="@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-search me-1"></i> Theo dõi
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-file-alt me-1"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="80" class="mb-3 opacity-25" />
            <h5 class="text-muted">Bạn chưa có đơn hàng nào</h5>
            <p class="mb-4 small">Hãy tạo đơn hàng đầu tiên ngay hôm nay!</p>
            <a asp-action="Create" class="btn btn-primary">Tạo đơn ngay</a>
        </div>
    }
</div>