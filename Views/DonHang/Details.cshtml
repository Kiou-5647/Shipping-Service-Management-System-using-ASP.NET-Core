@section Scripts {
    <script>
        function toggleShipperList() {
            var isDelivery = document.getElementById("typeDelivery").checked;
            var selDel = document.getElementById("selDelivery");
            var selTrans = document.getElementById("selTransport");
            if (isDelivery) {
                selDel.classList.remove("d-none"); selDel.disabled = false;
                selTrans.classList.add("d-none"); selTrans.disabled = true;
            } else {
                selDel.classList.add("d-none"); selDel.disabled = true;
                selTrans.classList.remove("d-none"); selTrans.disabled = false;
            }
        }
        function toggleLoc(side) {
            var type = $('#srcType').val(); // Mặc định lấy src
            if(side === 'dst') type = $('#dstType').val();

            var branchBox = $('#' + side + 'Branch');
            var manualBox = $('#' + side + 'Manual');

            branchBox.addClass('d-none');
            manualBox.addClass('d-none');

            if (type === '3') branchBox.removeClass('d-none');
            else if (type === '5') manualBox.removeClass('d-none');
            // Nếu thay đổi bên Nguồn (src) thì trigger load lại shipper
            if (side === 'src') {
                loadShippers();
            }
        }

        function loadShippers() {
            var srcType = $('#srcType').val();
            var locationId = "";
            var $select = $('#ajaxShipperSelect');

            // Helper gọi API
            function fetchShippers(locId) {
                $select.html('<option>Đang tìm kiếm...</option>');
                if (locId) {
                    $.getJSON('/Shipper/GetAvailableShippers', { locationId: locId }, function (data) {
                        $select.empty();
                        if (data.length > 0) {
                            $select.append('<option value="">-- Chọn Shipper (Đề xuất) --</option>');
                            $.each(data, function (i, item) {
                                $select.append(`<option value="${item.id}">${item.ten}</option>`);
                            });
                        } else {
                            $select.append('<option value="">(Không có Shipper Sẵn sàng tại đây)</option>');
                        }
                    });
                } else {
                    $select.html('<option value="">-- Chưa xác định được vị trí --</option>');
                }
            }

            // Logic xác định ID Tỉnh
            if (srcType === "1") {
                fetchShippers($('#originTinhId').val());
            }
            else if (srcType === "5") {
                fetchShippers($('#srcManualTinhId').val());
            }
            else if (srcType === "3") {
                var cnId = $('#srcBranchSelect').val();
                if(cnId) {
                    $.getJSON('/Shipper/ResolveLocation', { type: 3, dataId: cnId }, function(res) {
                        fetchShippers(res.locationId);
                    });
                } else {
                    $select.html('<option value="">-- Vui lòng chọn Kho --</option>');
                }
            }
            else if (srcType === "4") {
                var orderId = '@Model.Id';
                $.getJSON('/Shipper/ResolveLocation', { type: 4, orderId: orderId }, function(res) {
                    fetchShippers(res.locationId);
                });
            }
        }


        $(document).ready(function() {
            $('#modalAddShipment').on('show.bs.modal', function () {
                toggleLoc('src');
                toggleLoc('dst');
                loadShippers();
            });

            $("#paymentFile").change(function(e) {
                var file = e.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $("#paymentPreviewImg").attr("src", e.target.result).removeClass('d-none');
                        $("#paymentPreviewBox").removeClass('d-none');
                    }
                    reader.readAsDataURL(file);
                }
            });
        });

    </script>
}