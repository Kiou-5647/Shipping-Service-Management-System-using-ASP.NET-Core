@model Shipping.Models.NhanVien

@{
	ViewData["Title"] = "Quản lý nhân viên";
	var tenTinhThanh = (string)ViewBag.TenTinhThanh;
	var tenPhuongXa = (string)ViewBag.TenPhuongXa;
	var tenChiNhanh = (string)ViewBag.TenChiNhanh ?? "Không thuộc chi nhánh nào";
}
<div class="container py-4">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center justify-content-center pt-5">
                    <div class="position-relative mb-3">
                        <img src="/images/avatar/nhanvien/@Model.HinhAnh"
                             style="width: 180px; height: 180px; object-fit: cover;"
                             class="rounded-circle shadow border p-1 bg-white"
                             onerror="this.onerror=null;this.src='/images/avatar/default_image.jpg';" />

                        @{
                            string roleBadge = Model.IsQuanLy ? "bg-success" : "bg-info text-dark";
                            string roleText = Model.IsQuanLy ? "Quản lý" : "Nhân viên";
                        }
                        <span class="position-absolute bottom-0 end-0 badge rounded-pill @roleBadge border border-white p-2">
                            @roleText
                        </span>
                    </div>

                    <h4 class="fw-bold mb-1">@Html.DisplayFor(model => model.Ten)</h4>
                    <p class="text-muted mb-3">
                        @tenChiNhanh
                    </p>

                    <div class="d-flex gap-2 w-100 px-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-edit me-1"></i> Cập nhật
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="fw-bold m-0 text-primary"><i class="fas fa-id-card me-2"></i>Thông tin hồ sơ</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Thông tin cá nhân</h6>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Email</label>
                                    <div class="fs-6"><i class="far fa-envelope me-2 text-primary"></i>@Html.DisplayFor(model => model.User.Email)</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Số điện thoại</label>
                                    <div class="fs-6"><i class="fas fa-phone me-2 text-success"></i>@Html.DisplayFor(model => model.User.PhoneNumber)</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">CCCD</label>
                                    <div class="fs-6"><i class="far fa-id-badge me-2 text-info"></i>@Html.DisplayFor(model => model.CCCD)</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Giới tính</label>
                                    <div class="fs-6">
                                        <i class="fas fa-venus-mars me-2 text-secondary"></i>
                                        @(Model.GioiTinh ? "Nam" : "Nữ")
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Ngày sinh</label>
                                    <div class="fs-6"><i class="far fa-calendar-alt me-2 text-warning"></i>@Model.NgaySinh.ToString("dd/MM/yyyy")</div>
                                </div>
                            </div>
                        </div>

                        <div class="my-2"></div>
                        <hr class="mt-0">
                        <div class="col-12 mt-0">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Địa chỉ liên hệ</h6>
                            <div class="d-flex align-items-start">
                                <i class="fas fa-map-marker-alt text-danger mt-1 me-2"></i>
                                <div>
                                    <div class="fw-bold">@Html.DisplayFor(model => model.DiaChi)</div>
                                    <div class="text-muted small">
                                        @tenPhuongXa, @tenTinhThanh
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>