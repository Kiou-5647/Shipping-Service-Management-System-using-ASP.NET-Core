@model Shipping.ViewModels.NhanVienViewModel

@{
    ViewData["Title"] = "Thêm nhân viên";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0 fw-bold text-center"><i class="fas fa-user-plus me-2"></i>Thêm Nhân Viên Mới</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-3 text-center mb-4 mb-md-0 border-end">
                                <h6 class="fw-bold text-muted mb-3">Ảnh đại diện</h6>
                                <div class="mb-3">
                                    <img src="/images/avatar/default_image.jpg" id="HinhAnhPreview"
                                         class="rounded-circle shadow border p-1"
                                         style="width: 180px; height: 180px; object-fit: cover;" />
                                </div>
                                <div class="d-grid px-3">
                                    <label class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-camera me-1"></i> Chọn ảnh
                                        <input type="file" asp-for="file" class="d-none" onchange="previewImage(this)" accept="image/*" />
                                    </label>
                                </div>
                                <span asp-validation-for="file" class="text-danger small mt-2 d-block"></span>
                            </div>

                            <div class="col-md-9 ps-md-4">
                                <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-3">
                                    <i class="fas fa-info-circle me-1"></i> Thông tin cá nhân
                                </h6>
                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Ten" class="form-control" placeholder="Họ tên" />
                                            <label asp-for="Ten"></label>
                                            <span asp-validation-for="Ten" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="CCCD" class="form-control" placeholder="CCCD" />
                                            <label asp-for="CCCD"></label>
                                            <span asp-validation-for="CCCD" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="SDT" class="form-control" placeholder="SĐT" />
                                            <label asp-for="SDT"></label>
                                            <span asp-validation-for="SDT" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="NgaySinh" class="form-control" type="date" />
                                            <label asp-for="NgaySinh"></label>
                                            <span asp-validation-for="NgaySinh" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="border rounded p-2 d-flex align-items-center">
                                            <label class="fw-bold small me-3">Giới tính:</label>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" asp-for="GioiTinh" value="true" checked>
                                                <label class="form-check-label">Nam</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" asp-for="GioiTinh" value="false">
                                                <label class="form-check-label">Nữ</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-3 mt-4">
                                    <i class="fas fa-user-lock me-1"></i> Tài khoản đăng nhập
                                </h6>
                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Email" class="form-control" placeholder="Email" />
                                            <label asp-for="Email"></label>
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" />
                                            <label asp-for="Password"></label>
                                            <span asp-validation-for="Password" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                               <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-3 mt-4">
                                    <i class="fas fa-map-marker-alt me-1"></i> Địa chỉ liên hệ
                                </h6>
                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="TinhThanhId" class="form-select">
                                                <option value="">-- Chọn Tỉnh/Thành --</option>
                                                @foreach (var t in (IEnumerable<TinhThanh>)ViewBag.TinhThanh)
                                                {
                                                    <option value="@t.Id">@t.TenTinhThanh</option>
                                                }
                                            </select>
                                            <label asp-for="TinhThanhId"></label>
                                            <span asp-validation-for="TinhThanhId" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="PhuongXaId" class="form-select">
                                                <option value="">-- Chọn Phường/Xã --</option>
                                            </select>
                                            <label asp-for="PhuongXaId"></label>
                                            <span asp-validation-for="PhuongXaId" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <input asp-for="DiaChi" class="form-control" placeholder="Số nhà, đường..." />
                                            <label asp-for="DiaChi"></label>
                                            <span asp-validation-for="DiaChi" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-3 mt-4">
                                    <i class="fas fa-briefcase me-1"></i> Thông tin công việc
                                </h6>
                                <div class="row g-2">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <select asp-for="ChiNhanhId" class="form-select">
                                                    <option value="">-- Chọn Chi nhánh --</option>
                                                    @foreach (var t in (IEnumerable<ChiNhanh>)ViewBag.ChiNhanh)
                                                    {
                                                        <option value="@t.Id">@t.TenChiNhanh</option>
                                                    }
                                                </select>
                                                <label asp-for="ChiNhanhId"></label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 d-flex align-items-center ps-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="IsQuanLy" id="IsQuanLy">
                                                <label class="form-check-label fw-bold" for="IsQuanLy">Là Quản lý</label>
                                            </div>
                                        </div>
                                </div>
                                <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                                    </a>
                                    <button type="submit" class="btn btn-success fw-bold px-4">
                                        <i class="fas fa-save me-1"></i> Tạo Nhân Viên
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#HinhAnhPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $(document).ready(function () {
            var selectedMaPhuongXa = '@Model?.PhuongXaId';

            $('#TinhThanhId').change(function () {
                var tinhThanhId = $(this).val();
                loadPhuongXa(tinhThanhId);
            });

            function loadPhuongXa(TinhThanhId) {
                var ddlPhuongXa = $('#PhuongXaId');
                ddlPhuongXa.empty().append('<option value="">-- Đang tải... --</option>');

                if (!TinhThanhId) {
                    ddlPhuongXa.empty().append('<option value="">-- Chọn Phường/Xã --</option>');
                    return;
                }

                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetPhuongXaByTinhThanh", "Address")',
                    data: { TinhThanhId: TinhThanhId },
                    success: function (data) {
                        ddlPhuongXa.empty().append('<option value="">-- Chọn Phường/Xã --</option>');
                        $.each(data, function (index, item) {
                            ddlPhuongXa.append($('<option></option>').val(item.id).text(item.name));
                        });
                        if (selectedMaPhuongXa) {
                            ddlPhuongXa.val(selectedMaPhuongXa);
                            selectedMaPhuongXa = null;
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Lỗi:", error);
                        ddlPhuongXa.empty().append('<option value="">Lỗi tải dữ liệu</option>');
                    }
                });
            }

            var initialTinh = $('#TinhThanhId').val();
            if (initialTinh) loadPhuongXa(initialTinh);
        });
    </script>
}