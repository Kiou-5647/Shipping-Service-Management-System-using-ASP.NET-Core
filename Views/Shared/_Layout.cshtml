@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Giao hàng</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shipping.styles.css" asp-append-version="true" />

    <style>
        /* Tùy chỉnh nhẹ cho Navbar */
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
        }

        .nav-link {
            font-weight: 500;
            font-size: 0.95rem;
        }

        .dropdown-item:active {
            background-color: #0d6efd;
        }

        .nav-link:hover {
            color: #0d6efd !important;
        }

        /* Fix lỗi hiển thị nội dung khi dùng fixed-top */
        .main-content {
            min-height: calc(100vh - 120px);
        }

        body {
            padding-top: 70px;
        }
        /* Đẩy nội dung xuống dưới Navbar */
    </style>
</head>
<body class="d-flex flex-column min-h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                @if (User.IsInRole("Admin") || User.IsInRole("NhanVien"))
                {
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-truck-fast me-2"></i>SHIPPING APP
                    </a>
                }
                else if (User.IsInRole("Shipper"))
                {
                    <a class="nav-link text-dark" asp-controller="ChuyenHang" asp-action="MyShipments">
                        <i class="fas fa-truck-fast me-2"></i>SHIPPING APP
                    </a>
                }
                else
                {
                    <a class="nav-link text-dark" asp-controller="DonHang" asp-action="MyOrders">
                        <i class="fas fa-truck-fast me-2"></i>SHIPPING APP
                    </a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 align-items-center">

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-tachometer-alt me-1 text-info"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="dropAdmin" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-shield me-1"></i> Quản trị
                                </a>
                                <ul class="dropdown-menu shadow border-0" aria-labelledby="dropAdmin">
                                    <li>
                                        <a class="dropdown-item" asp-controller="DonHang" asp-action="Index">
                                            <i class="fas fa-clipboard-list me-2 text-primary"></i>Quản lý Đơn hàng
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="DonHang" asp-action="Create">
                                            <i class="fas fa-file-medical me-2 text-success"></i>Tạo đơn mới
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Shipper" asp-action="Index">
                                            <i class="fas fa-shipping-fast me-2 text-warning"></i>Quản lý Shipper
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="NhanVien" asp-action="Index">
                                            <i class="fas fa-user-tie me-2 text-dark"></i>Quản lý Nhân viên
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="ChiNhanh" asp-action="Index">
                                            <i class="fas fa-building me-2 text-secondary"></i>Quản lý Chi nhánh
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="KhachHang" asp-action="Index">
                                            <i class="fas fa-users me-2 text-info"></i>Quản lý Khách hàng
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="LoaiDichVu" asp-action="Index">
                                            <i class="fas fa-tags me-2 text-danger"></i>Dịch vụ và giá cước
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Config" asp-action="Index">
                                            <i class="fas fa-cogs me-2 text-secondary"></i>Cài đặt hệ thống
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        else if (User.IsInRole("NhanVien"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="DonHang" asp-action="Index">
                                    <i class="fas fa-boxes me-1"></i> Quản lý Đơn hàng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="DonHang" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i> Tạo đơn mới
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">
                                    <i class="fas fa-user-tie me-1"></i> Quản lý Khách hàng
                                </a>
                            </li>
                        }

                        else if (User.IsInRole("Shipper"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Shipper" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ChuyenHang" asp-action="MyShipments">
                                    <i class="fas fa-tasks me-1"></i> Nhiệm vụ của tôi
                                </a>
                            </li>
                        }

                        else if (User.IsInRole("KhachHang"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="DonHang" asp-action="MyOrders">
                                    <i class="fas fa-history me-1"></i> Lịch sử đơn hàng
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-sm btn-primary rounded-pill px-3 fw-bold shadow-sm text-white" asp-controller="DonHang" asp-action="Create">
                                    <i class="fas fa-paper-plane me-1"></i> GỬI HÀNG NGAY
                                </a>
                            </li>
                        }

                        <li class="nav-item ms-lg-2">
                            <a class="nav-link text-dark" asp-controller="Tracking" asp-action="Index">
                                <i class="fas fa-search me-1"></i> Tra cứu vận đơn
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">
                                    Xin chào, <b>@User.Identity?.Name</b>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="fas fa-id-card me-2 text-info"></i> Hồ sơ cá nhân
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                                            <i class="fas fa-key me-2"></i> Đổi mật khẩu
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item text-danger">Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-outline-primary btn-sm px-3" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto py-3">
        <div class="container text-center small">
            &copy; 2025 - <strong>Shipping App</strong> - Nền tảng giao hàng thông minh.
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none ms-2">Điều khoản</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>