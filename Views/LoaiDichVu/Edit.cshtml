@model Shipping.Models.LoaiDichVu

@{
    ViewData["Title"] = "Quản lý dịch vụ";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="m-0 fw-bold text-center"><i class="fas fa-edit me-2"></i>Chỉnh sửa Thông tin Dịch vụ</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TenDichVu" />
                        <input type="hidden" asp-for="MaDV" />

                        <div class="row g-3 mb-3">
                            <div class="col-md-9">
                                <div class="form-floating">
                                    <input value="@Model.TenDichVu" class="form-control bg-light" readonly />
                                    <label>Tên dịch vụ</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input value="@Model.MaDV" class="form-control bg-light fw-bold text-primary" readonly />
                                    <label>Mã DV</label>
                                </div>
                            </div>
                        </div>

                        <h6 class="text-primary fw-bold border-bottom pb-2 mb-3 mt-4">
                            <i class="far fa-clock me-1"></i> Khung thời gian toàn trình (Ngày)
                        </h6>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ThoiGianToiThieu" class="form-control" type="number" min="0" placeholder="Min" />
                                    <label asp-for="ThoiGianToiThieu">Tối thiểu</label>
                                    <span asp-validation-for="ThoiGianToiThieu" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ThoiGianToiDa" class="form-control" type="number" min="0" placeholder="Max" />
                                    <label asp-for="ThoiGianToiDa">Tối đa</label>
                                    <span asp-validation-for="ThoiGianToiDa" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="MocCanNang" value="@Model.MocCanNang.ToString("N2")" class="form-control" type="number" step="0.25" min="0" placeholder="Mốc cân nặng" />
                                    <label asp-for="MocCanNang"></label>
                                    <span asp-validation-for="MocCanNang" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DonViTangThem" value="@Model.DonViTangThem.ToString("N2")" class="form-control" type="number" step="0.25" min="0" placeholder="Đơn vị tăng thêm" />
                                    <label asp-for="DonViTangThem"></label>
                                    <span asp-validation-for="DonViTangThem" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="MoTa" class="form-control" style="height: 100px" placeholder="Mô tả"></textarea>
                            <label asp-for="MoTa">Mô tả dịch vụ</label>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                                Lưu & Trở về chi tiết dịch vụ</i>
                            </button>
                            <a asp-action="EditGiaCuoc" asp-route-id="@Model.Id" class="btn btn-outline-warning">Cập nhật giá cước</a>
                            <a asp-action="Index" class="btn btn-outline-secondary">Hủy bỏ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}