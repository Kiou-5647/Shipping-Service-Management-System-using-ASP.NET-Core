@model Shipping.Models.LoaiDichVu

@{
    ViewData["Title"] = "Quản lý dịch vụ";
}

<h1 class="text-center">Chỉnh Sửa Dịch Vụ: @Model.TenDichVu</h1>
<hr />

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TenDichVu" />
    <input type="hidden" asp-for="MaDV" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-md-4">
                            Tên dịch vụ
                        </dt>
                        <dd class="col-md-8">
                            @Model.TenDichVu
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <dl class="row">
                        <dt class="col-md-4">
                            Mã DV
                        </dt>
                        <dd class="col-md-8">
                            @Model.MaDV
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MocCanNang" class="control-label"></label>
                <input asp-for="MocCanNang" value="@Model.MocCanNang.ToString("N1")" class="form-control" type="number" step="0.50" min="0" />
                <span class="form-text text-muted">kg</span>
                <span asp-validation-for="MocCanNang" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DonViTangThem" class="control-label"></label>
                <input asp-for="DonViTangThem" value="@Model.DonViTangThem.ToString("N1")" class="form-control" type="number" step="0.50" min="0" />
                <span class="form-text text-muted">kg</span>
                <span asp-validation-for="DonViTangThem" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ThoiGianToiThieu" class="control-label"></label>
                        <input asp-for="ThoiGianToiThieu" class="form-control" type="number" min="0" />
                        <span asp-validation-for="ThoiGianToiThieu" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ThoiGianToiDa" class="control-label"></label>
                        <input asp-for="ThoiGianToiDa" class="form-control" type="number" min="0" />
                        <span asp-validation-for="ThoiGianToiDa" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTa" class="control-label"></label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="text-center my-4">
        <input type="submit" value="Lưu Thông Tin Chung & Tiếp Tục" class="btn btn-primary" /> &nbsp;
        <a asp-action="EditGiaCuoc" asp-route-id="@Model.Id" class="btn btn-info">Chỉnh Sửa Giá Cước</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
