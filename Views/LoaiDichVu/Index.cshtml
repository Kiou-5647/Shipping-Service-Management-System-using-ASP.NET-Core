@model IEnumerable<Shipping.Models.LoaiDichVu>

@{
    ViewData["Title"] = "Quản lý dịch vụ";
    int index = 1;
}

<div class="container-fluid py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="m-0 fw-bold text-uppercase"><i class="fas fa-shipping-fast me-2"></i>Danh sách Dịch vụ Giao hàng</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr class="text-center text-uppercase small fw-bold">
                            <th style="width: 50px;">#</th>
                            <th style="width: 100px;">Mã DV</th>
                            <th class="text-start" style="width: 350px;">Tên dịch vụ</th>
                            <th class="text-start">Mô tả</th>
                            <th style="width: 150px;">Thời gian (Ngày)</th>
                            <th style="width: 100px;">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td class="text-muted">@(index++)</td>
                                <td><span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.MaDV)</span></td>
                                <td class="text-start fw-bold text-primary">
                                    @Html.DisplayFor(modelItem => item.TenDichVu)
                                </td>
                                <td class="text-start small text-muted text-wrap">
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        <i class="far fa-clock me-1"></i>
                                        @item.ThoiGianToiThieu - @item.ThoiGianToiDa
                                    </span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-success shadow-sm" asp-action="Details" asp-route-id="@item.Id" title="Xem chi tiết">
                                        <i class="fas fa-info-circle me-1"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>