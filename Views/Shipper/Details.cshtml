@model Shipping.ViewModels.ShipperViewModel
@using Shipping.Models

@{
    ViewData["Title"] = "Chi tiết Shipper";
    var tenTinhThanh = (string)ViewBag.TenTinhThanh;
    var tenPhuongXa = (string)ViewBag.TenPhuongXa;
    var tenChiNhanh = (string)ViewBag.TenChiNhanh ?? "Không thuộc chi nhánh nào";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center justify-content-center pt-5">
                    <div class="position-relative mb-3">
                        <img src="/images/avatar/shipper/@Model.HinhAnh"
                             style="width: 180px; height: 180px; object-fit: cover;"
                             class="rounded-circle shadow border p-1 bg-white"
                             onerror="this.onerror = 'null'; this.src='/images/avatar/default_image.jpg'"
                             asp-append-version="true" />

                        @{
                            string statusColor = Model.TrangThai == Shipping.Models.Enums.TrangThaiShipper.SanSang ? "bg-success" :
                            Model.TrangThai == Shipping.Models.Enums.TrangThaiShipper.Ban ? "bg-warning" : "bg-danger";
                            string statusText = Model.TrangThai == Shipping.Models.Enums.TrangThaiShipper.SanSang ? "Sẵn sàng" :
                            Model.TrangThai == Shipping.Models.Enums.TrangThaiShipper.Ban ? "Đang bận" : "Nghỉ";
                        }
                        <span class="position-absolute bottom-0 end-0 badge rounded-pill @statusColor border border-white p-2">
                            @statusText
                        </span>
                    </div>

                    <h4 class="fw-bold mb-1">@Html.DisplayFor(model => model.Ten)</h4>
                    <p class="text-muted mb-3">@Html.DisplayFor(model => model.LoaiShipper)</p>

                    <div class="d-flex gap-2 w-100 px-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-edit me-1"></i> Cập nhật
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="fw-bold m-0 text-primary"><i class="fas fa-id-card me-2"></i>Thông tin chi tiết</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Liên hệ & Cá nhân</h6>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Email</label>
                                    <div class="fs-6"><i class="far fa-envelope me-2 text-primary"></i>@Html.DisplayFor(model => model.Email)</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Số điện thoại</label>
                                    <div class="fs-6"><i class="fas fa-phone me-2 text-success"></i>@Html.DisplayFor(model => model.SDT)</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">CCCD</label>
                                    <div class="fs-6"><i class="far fa-id-badge me-2 text-info"></i>@Html.DisplayFor(model => model.CCCD)</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Giới tính</label>
                                    <div class="fs-6">
                                        <i class="fas fa-venus-mars me-2 text-secondary"></i>
                                        @(Model.GioiTinh ? "Nam" : "Nữ")
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Ngày sinh</label>
                                    <div class="fs-6"><i class="far fa-calendar-alt me-2 text-warning"></i>@Model.NgaySinh.ToString("dd/MM/yyyy")</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Biển số xe</label>
                                    <div class="fs-6"><i class="fas fa-motorcycle me-2 text-dark"></i>@Model.BienSoXe</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Loại shipper</label>
                                    <div class="fs-6"><i class="fas fa-tag me-2 text-primary"></i>@Html.DisplayFor(model => model.LoaiShipper)</div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Chi nhánh</label>
                                    <div class="fs-6"><i class="fas fa-building me-2 text-secondary"></i>@tenChiNhanh</div>
                                </div>
                            </div>
                        </div>
                        <div class="my-2"></div>
                        <hr class="mt-0">
                        <div class="col-12 mt-0">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Địa chỉ thường trú</h6>
                            <div class="d-flex align-items-start">
                                <i class="fas fa-map-marker-alt text-danger mt-1 me-2"></i>
                                <div>
                                    <div class="fw-bold">@Html.DisplayFor(model => model.DiaChi)</div>
                                    <div class="text-muted small">
                                        @tenPhuongXa, @tenTinhThanh.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>