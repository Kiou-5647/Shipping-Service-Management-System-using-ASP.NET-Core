@model IEnumerable<Shipping.Models.Shipper>

@{
    ViewData["Title"] = "Quản lý shipper";
    int index = 1;
}

<div class="container-fluid py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="m-0 fw-bold"><i class="fas fa-shipping-fast me-2"></i>Danh sách Shipper</h5>
            <a asp-action="Create" class="btn btn-light text-primary fw-bold btn-sm shadow-sm">
                <i class="fas fa-plus me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr class="text-center text-uppercase small fw-bold">
                            <th style="width: 50px;">#</th>
                            <th style="width: 100px;">Ảnh</th>
                            <th class="text-start">Họ tên & Email</th>
                            <th>SĐT</th>
                            <th>Loại</th>
                            <th>Trạng thái</th>
                            <th>Chi nhánh</th>
                            <th style="width: 150px;">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td class="text-muted">@(index++)</td>
                                <td>
                                    <div class="avatar-wrapper">
                                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                                        {
                                            <img src="/images/avatar/shipper/@Html.DisplayFor(modelItem => item.HinhAnh)"
                                                 class="rounded-circle shadow-sm border"
                                                 style="width: 50px; height: 50px; object-fit: cover;"
                                                 alt="Avatar" />
                                        }
                                        else
                                        {
                                            <img src="/images/avatar/default_image.jpg"
                                                 class="rounded-circle shadow-sm border"
                                                 style="width: 50px; height: 50px; object-fit: cover;"
                                                 alt="Default" />
                                        }
                                    </div>
                                </td>
                                <td class="text-start">
                                    <div class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Ten)</div>
                                    <small class="text-muted"><i class="far fa-envelope me-1"></i>@Html.DisplayFor(modelItem => item.User.Email)</small>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">@Html.DisplayFor(modelItem => item.User.PhoneNumber)</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiShipper)
                                </td>
                                <td>
                                    @{
                                        string trangThai = "";
                                        string stateBadge = "";
                                        switch (item.TrangThai)
                                        {
                                            case Shipping.Models.Enums.TrangThaiShipper.SanSang:
                                                trangThai = "Sẵn sàng";
                                                stateBadge = "bg-success";
                                                break;
                                            case Shipping.Models.Enums.TrangThaiShipper.Ban:
                                                trangThai = "Bận";
                                                stateBadge = "bg-warning text-dark";
                                                break;
                                            default:
                                                trangThai = "Nghỉ";
                                                stateBadge = "bg-secondary";
                                                break;
                                        }
                                    }
                                    <span class="badge @stateBadge rounded-pill">@trangThai</span>
                                </td>
                                <td class="small text-muted">
                                    @if (item.ChiNhanh != null)
                                    {
                                        <i class="fas fa-building me-1"></i> 
                                        @Html.DisplayFor(modelItem => item.ChiNhanh.TenChiNhanh)
                                    }
                                    else
                                    {
                                        <span class="text-danger fst-italic">Chưa phân công</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa shipper @item.Ten không?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>