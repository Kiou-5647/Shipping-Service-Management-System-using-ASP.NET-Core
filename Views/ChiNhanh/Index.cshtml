@model IEnumerable<Shipping.Models.ChiNhanh>

@{
    ViewData["Title"] = "Quản lý chi nhánh";
    int index = 1;
}

<div class="container-fluid py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="m-0 fw-bold"><i class="fas fa-building me-2"></i>Danh sách chi nhánh</h5>
            <div class="d-flex gap-2">
                <form asp-action="Index" method="get" class="d-flex">
                    <div class="input-group input-group-sm">
                        <input type="text" name="searchString" value="@ViewBag.Search"
                               class="form-control border-0"
                               placeholder="Tên, SĐT, Địa chỉ,..."
                               style="min-width: 200px;">
                        <button type="submit" class="btn btn-light text-primary fw-bold">
                            <i class="fas fa-search"></i>
                        </button>
                        @if (!string.IsNullOrEmpty(ViewBag.Search?.ToString()))
                        {
                            <a asp-action="Index" class="btn btn-outline-light text-white" title="Xóa tìm kiếm">
                                <i class="fas fa-times"></i>
                            </a>
                        }
                    </div>
                </form>

                <a asp-action="Create" class="btn btn-light text-primary fw-bold btn-sm shadow-sm d-flex align-items-center">
                    <i class="fas fa-plus me-1"></i> Thêm mới
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr class="text-center text-uppercase small fw-bold">
                            <th style="width: 50px;">#</th>
                            <th class="text-start" style="width: 25%;">Tên chi nhánh</th>
                            <th style="width: 15%;">Số điện thoại</th>
                            <th class="text-start">Địa chỉ chi tiết</th>
                            <th style="width: 150px;">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td class="text-muted">@(index++)</td>
                                <td class="text-start">
                                    <div class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.TenChiNhanh)</div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="fas fa-phone me-1 text-success"></i> @Html.DisplayFor(modelItem => item.SDT)
                                    </span>
                                </td>
                                <td class="text-start small text-muted">
                                    <i class="fas fa-map-marker-alt me-1 text-danger"></i>
                                    @item.DiaChi, @item.PhuongXa.TenPhuongXa, @item.TinhThanh.TenTinhThanh
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa chi nhánh @item.TenChiNhanh không?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>