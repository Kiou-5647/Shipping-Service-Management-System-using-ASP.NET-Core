@using Shipping.Models
@using Shipping.Models.Enums
@model Shipping.ViewModels.KhachHangViewModel

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-white py-3 d-flex align-items-center border-bottom">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="fas fa-user fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold text-primary">@Html.DisplayFor(model => model.Ten)</h5>
                        <small class="text-muted">
                            @if (Model.LoaiKhachHang == LoaiKhachHang.CaNhan)
                            {
                                <span><i class="fas fa-user me-1"></i>Khách hàng Cá nhân</span>
                            }
                            else
                            {
                                <span><i class="fas fa-building me-1"></i>Khách hàng Doanh nghiệp</span>
                            }
                        </small>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6 border-end">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">
                                <i class="fas fa-id-card me-2"></i>Thông tin định danh
                            </h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4 text-muted">Email:</dt>
                                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Email)</dd>

                                <dt class="col-sm-4 text-muted">Số điện thoại:</dt>
                                <dd class="col-sm-8 text-success fw-bold">@Html.DisplayFor(model => model.SDT)</dd>

                                <dt class="col-sm-4 text-muted">CCCD:</dt>
                                <dd class="col-sm-8">@(Model.CCCD != null ? Model.CCCD : "---")</dd>

                                <dt class="col-sm-4 text-muted">Mã số thuế:</dt>
                                <dd class="col-sm-8">@(Model.MaSoThue != null ? Model.MaSoThue : "---")</dd>
                            </dl>
                        </div>

                        <div class="col-md-6 ps-md-4">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">
                                <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ liên hệ
                            </h6>

                            @{
                                var dsTinhThanh = (IEnumerable<TinhThanh>)ViewBag.TinhThanh;
                                var t = dsTinhThanh != null ? dsTinhThanh.FirstOrDefault(t => t.Id == Model.TinhThanhId) : null;
                                string tenTinhThanh = t != null ? t.TenTinhThanh : "Không tìm thấy tỉnh/thành";

                                var dsPhuongXa = (IEnumerable<PhuongXa>)ViewBag.PhuongXa;
                                var p = dsPhuongXa != null ? dsPhuongXa.FirstOrDefault(t => t.Id == Model.PhuongXaId) : null;
                                string tenPhuongXa = p != null ? p.TenPhuongXa : "Không tìm thấy phường/xã";
                            }

                            <div class="alert alert-light border">
                                <div class="d-flex mb-2">
                                    <span class="fw-bold me-2" style="min-width: 90px;">Tỉnh/Thành:</span>
                                    <span>@tenTinhThanh</span>
                                </div>
                                <div class="d-flex mb-2">
                                    <span class="fw-bold me-2" style="min-width: 90px;">Phường/Xã:</span>
                                    <span>@tenPhuongXa</span>
                                </div>
                                <hr class="my-2">
                                <div class="d-flex">
                                    <span class="fw-bold me-2" style="min-width: 90px;">Chi tiết:</span>
                                    <span class="text-primary fw-bold">@Html.DisplayFor(m => Model.DiaChi)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light py-3 d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>