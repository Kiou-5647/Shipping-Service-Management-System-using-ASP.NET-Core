@model Shipping.ViewModels.KhachHangViewModel

@{
    ViewData["Title"] = "Quản lý khách hàng";
}



<div class="row">
    <div class="col-md-10 offset-md-1">
        <h1 class="text-center">Thông tin khách hàng</h1>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-md-4">
                        Tên KH:
                    </dt>
                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.Ten)
                    </dd>
                    <dt class="col-md-4">
                        Email:
                    </dt>
                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-md-4">
                        SĐT:
                    </dt>
                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.SDT)
                    </dd>
                    <dt class="col-md-4">
                        Tỉnh/thành:
                    </dt>
                    <dd class="col-md-8">
                        @{
                            var dsTinhThanh = (IEnumerable<TinhThanh>)ViewBag.TinhThanh;
                            var t = dsTinhThanh.FirstOrDefault(t => t.Id == Model.TinhThanhId);
                            string tenTinhThanh = t != null ? t.TenTinhThanh : "Không tìm thấy tỉnh/thành phố";
                        }
                        @tenTinhThanh
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-md-4">
                        Loại KH:
                    </dt>
                    <dd class="col-md-8">
                        @(Model.LoaiKhachHang == Shipping.Models.Enums.LoaiKhachHang.CaNhan ? "Cá nhân" : "Doanh nghiệp")
                    </dd>
                    <dt class="col-md-4">
                        Mã số thuế:
                    </dt>
                    <dd class="col-md-8">
                        @(Model.MaSoThue != null ? Model.MaSoThue : "Không có")
                    </dd>
                    <dt class="col-md-4">
                        CCCD:
                    </dt>
                    <dd class="col-md-8">
                        @(Model.CCCD != null ? Model.CCCD : "Không có")
                    </dd>
                    <dt class="col-md-4">
                        Phường/xã:
                    </dt>
                    <dd class="col-md-8">
                        @{
                            var dsPhuongXa = (IEnumerable<PhuongXa>)ViewBag.PhuongXa;
                            var p = dsPhuongXa.FirstOrDefault(t => t.Id == Model.PhuongXaId);
                            string tenPhuongXa = p != null ? p.TenPhuongXa : "Không tìm thấy phường/xã";
                        }
                        @tenPhuongXa
                    </dd>
                </dl>
            </div>
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-md-2">
                        Địa chỉ hiện tại:
                    </dt>
                    <dd class="col-md-10">
                        @Html.DisplayFor(m => Model.DiaChi), @tenPhuongXa, @tenTinhThanh
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group mb-3 text-center">
            <a asp-action="Index" class="btn btn-outline-secondary">Trở về danh sách</a>
        </div>
    </div>
</div>
