@using Shipping.Models.Enums

@model IEnumerable<Shipping.Models.KhachHang>
@{
    ViewData["Title"] = "Quản lý khách hàng";
    int index = 1;
}

<h1 class="text-center">Danh sách khách hàng</h1>
<hr />

<table class="table table-bordered">
    <thead class="table-dark justify-content-center">
        <tr class="text-center">
            <th>
                #
            </th>
            <th class="col-1">
                Loại
            </th>
            <th class="col-3">
                Tên khách hàng
            </th>
            <th class="col-auto">
                CCCD
            </th>
            <th class="col-auto">
                Mã số thuế
            </th>
            <th class="col-auto">
                Số điện thoại
            </th>
            <th class="col-2">
                Tác vụ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle text-center">
                <td>
                    <b>@(index++)</b>
                </td>
                <td>
                    @(item.LoaiKhachHang == LoaiKhachHang.CaNhan ? "Cá nhân" : "Doanh nghiệp")
                </td>
                <td class="text-start">
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CCCD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSoThue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.PhoneNumber)
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> &nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
