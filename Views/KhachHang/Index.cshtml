@using Shipping.Models.Enums
@model IEnumerable<Shipping.Models.KhachHang>

@{
    ViewData["Title"] = "Quản lý khách hàng";
    int index = 1;
}

<div class="container-fluid py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="m-0 fw-bold"><i class="fas fa-users me-2"></i>Danh sách Khách hàng</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr class="text-center text-uppercase small fw-bold">
                            <th style="width: 50px;">#</th>
                            <th style="width: 120px;">Loại KH</th>
                            <th class="text-start">Thông tin khách hàng</th>
                            <th>CCCD</th>
                            <th>Mã số thuế</th>
                            <th>SĐT</th>
                            <th style="width: 100px;">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td class="text-muted">@(index++)</td>
                                <td>
                                    @if (item.LoaiKhachHang == LoaiKhachHang.CaNhan)
                                    {
                                        <span class="badge bg-info text-dark rounded-pill">
                                            <i class="fas fa-user me-1"></i> Cá nhân
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-dark rounded-pill">
                                            <i class="fas fa-building me-1"></i> Doanh nghiệp
                                        </span>
                                    }
                                </td>
                                <td class="text-start">
                                    <div class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.Ten)</div>
                                    <small class="text-muted">
                                        <i class="far fa-envelope me-1"></i>
                                        @Html.DisplayFor(modelItem => item.User.Email)
                                    </small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CCCD))
                                    {
                                        <span>@Html.DisplayFor(modelItem => item.CCCD)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.MaSoThue))
                                    {
                                        <span class="font-monospace">@Html.DisplayFor(modelItem => item.MaSoThue)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="fw-bold text-secondary">@Html.DisplayFor(modelItem => item.User.PhoneNumber)</span>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary shadow-sm" title="Xem chi tiết">
                                        <i class="fas fa-info-circle me-1"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>